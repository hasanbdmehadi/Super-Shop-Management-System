        @Html.TextBoxFor(m=>m.Product_Barcode)
    </div>
                    </div>
    <div class="LeftRow">
                <div class="LeftColumn">
        @Html.LabelFor(m=>m.ProductType)
                   </div> <div>
        @Html.TextBoxFor(m=>m.ProductType,  new { @class = "required" })
    </div>
                    </div>
