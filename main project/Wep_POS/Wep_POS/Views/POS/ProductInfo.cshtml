   <div class="LeftRow">
                <div class="LeftColumn">
        @Html.LabelFor(m=>m.ProductName, "Product Name")
                   </div> <div>
        @Html.TextBoxFor(m=>m.ProductName, new { @class = "required" })
    </div>
                    </div>
    <div class="LeftRow">
                <div class="LeftColumn">
        @Html.LabelFor(m=>m.Product_Barcode, "Product Barcode")
